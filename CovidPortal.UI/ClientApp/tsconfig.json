{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@components/*": [ "app/components/*" ],
      "@guards/*": [ "app/guards/*" ],
      "@modules/*": [ "app/modules/*" ],
      "@pages/*": [ "app/pages/*" ],
      "@services/*": [ "app/services/*" ],
      "@/*": [ "app/*" ]
    }
  }
}
